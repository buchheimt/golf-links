<div class="container">
  <div class="row">
    <div class="col-sm-8 mx-auto">
      <h1>Courses</h1>
    </div>
  </div><br>
  <% if policy(Course.new).create? %>
    <div class="row">
      <div class="col-sm-4 mx-auto">
        <%= link_to "Add New Course", new_course_path, class: "btn" %>
      </div>
    </div><br>
  <% end %>
  <div class="row">
    <%= render @courses %>
  </div>
</div>
