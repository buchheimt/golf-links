<div class="container">
  <div class="row course-main">
      <div class="col-sm-8">
        <%= image_tag @course.get_image, class: "course-pic", id: "coursePic" %>
      </div><br>
      <div class="col-sm-4"><br><br><br>
        <div class="row">
          <div class="col-sm-4">
            <p><strong>Location:</strong></p>
          </div>
          <div class="col-sm-8">
            <p id="location"><%= @course.location %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4">
            <p><strong>Par:</strong></p>
          </div>
          <div class="col-sm-8">
            <p id="par"><%= @course.par.to_s %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4">
            <p><strong>Length:</strong></p>
          </div>
          <div class="col-sm-8">
            <p><span id="length"><%= @course.length.to_s %></span> yds</p>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4">
            <p><strong>Fees:</strong></p>
          </div>
          <div class="col-sm-8">
            <p>$<span id="price"><%= @course.price.to_s %></span></p>
          </div>
        </div>
      <% if policy(@course).update? %>
        <%= link_to "Edit Course", edit_course_path(@course), class: "btn" %>
      <% end %>
      </div>
      <div class="row course-primary-info">
        <div class="col-sm-12"><br>
          <h1 id="name"><%= @course.name %></h1><br>
          <p class="description" id="description"><%= @course.description %></p><br>
        </div>
      </div><br>
    <% if policy(TeeTime.new).create? %>
      <div class="col-sm-12 mx-auto">
        <%= link_to "Create New Tee Time", new_course_tee_time_path(@course), class: "btn" %>
      </div>
    <% end %>
    </div>
  </div><br>

  <div class="row">
    <div class="col-sm-2">
      <button type="button" data-id="<%= @course.id %>" name="button" class="btn" id="prevBtn">Prev</button>
    </div>
    <div class="col-sm-8"></div>
    <div class="col-sm-2">
      <button type="button" data-id="<%= @course.id %>" name="button" class="btn" id="nextBtn">Next</button>
    </div>
  </div><br>

  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h4>Upcoming Tee Times</h4>
    </div>
  </div><br>
  <div class="row">
  <% if @tee_times %>
    <%= render @tee_times %>
  <% end %>
  </div>
</div>
