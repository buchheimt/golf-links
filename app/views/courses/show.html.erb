<div class="container">
  <div class="row course-main">
      <div class="col-sm-8">
        <%= image_tag @course.image, class: "course-pic" %>
      </div><br>
      <div class="col-sm-4">
        <br><br>
        <p>Location: <%= @course.location %></p>
        <p>Par: <%= @course.par.to_s %></p>
        <p>Length: <%= @course.length.to_s %> yds</p>
        <p>Weekend Rate: $<%= @course.price.to_s %></p>
        <% if policy(@course).update? %>
          <%= link_to "Edit Course", edit_course_path(@course), class: "btn" %>
        <% end %>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <br>
          <h1><%= @course.name %></h1><br>
          <p><%= @course.description %></p><br>
        </div>
      </div><br>
      <% if policy(TeeTime.new).create? %>
        <div class="col-sm-12 mx-auto">
          <%= link_to "Create New Tee Time", new_course_tee_time_path(@course), class: "btn" %>
        </div>
      <% end %>
    </div>
  </div><br>

  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h4>Upcoming Tee Times</h4>
    </div>
  </div><br>
  <div class="row">
    <% if @tee_times %>
      <%= render @tee_times %>
    <% end %>
  </div>
</div>
