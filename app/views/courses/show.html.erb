<div class="container">
  <div class="row course-main">
      <div class="col-sm-8">
        <%= image_tag @course.image, class: "course-pic" %>
      </div><br>
      <div class="col-sm-4"><br><br><br>
        <div class="row">
          <div class="col-sm-4">
            <p><strong>Location:</strong></p>
          </div>
          <div class="col-sm-8">
            <p><%= @course.location %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4">
            <p><strong>Par:</strong></p>
          </div>
          <div class="col-sm-8">
            <p><%= @course.par.to_s %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4">
            <p><strong>Length:</strong></p>
          </div>
          <div class="col-sm-8">
            <p><%= @course.length.to_s %> yds</p>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-4">
            <p><strong>Fees:</strong></p>
          </div>
          <div class="col-sm-8">
            <p>$<%= @course.price.to_s %></p>
          </div>
        </div>
      <% if policy(@course).update? %>
        <%= link_to "Edit Course", edit_course_path(@course), class: "btn" %>
      <% end %>
      </div>
      <div class="row">
        <div class="col-sm-12"><br>
          <h1><%= @course.name %></h1><br>
          <p class="description"><%= @course.description %></p><br>
        </div>
      </div><br>
    <% if policy(TeeTime.new).create? %>
      <div class="col-sm-12 mx-auto">
        <%= link_to "Create New Tee Time", new_course_tee_time_path(@course), class: "btn" %>
      </div>
    <% end %>
    </div>
  </div><br>

  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h4>Upcoming Tee Times</h4>
    </div>
  </div><br>
  <div class="row">
  <% if @tee_times %>
    <%= render @tee_times %>
  <% end %>
  </div>
</div>
