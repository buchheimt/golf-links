<div class="container">
  <div class="row">
    <div class="col-sm-9 mx-auto user-card">
      <div class="row">
        <div class="col-sm-9"></div>
        <div class="col-sm-3">
          <%= button_tag "Delete User", data: {url: user_path(@user)}, class: "btn warning" %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <h2>Edit <%= @user.username %></h2><br>
        </div>
      </div>
      <%= render partial: 'form', locals: {user: @user} %>
    </div>
  </div>
</div>
